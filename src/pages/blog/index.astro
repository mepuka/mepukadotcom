---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  });
};
---

<BaseLayout title="Blog | Mepuka" description="Thoughts on software, systems, and ideas">
  <h1>Blog</h1>
  <p class="intro text-muted">Thoughts on software, systems, and ideas.</p>

  <ul class="post-list stagger">
    {posts.map((post) => (
      <li>
        <a href={`/blog/${post.slug}`}>
          <div class="post-info">
            <span class="post-title">{post.data.title}</span>
            {post.data.description && (
              <span class="post-description">{post.data.description}</span>
            )}
          </div>
          <span class="post-date">{formatDate(post.data.date)}</span>
        </a>
      </li>
    ))}
  </ul>

  {posts.length === 0 && (
    <p class="text-muted">No posts yet. Check back soon.</p>
  )}
</BaseLayout>

<style>
  h1 {
    margin-bottom: var(--space-2);
  }

  .intro {
    margin-bottom: var(--space-12);
  }

  .post-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .post-list li {
    margin-bottom: 0;
    border-bottom: 1px solid var(--color-border);
  }

  .post-list li:last-child {
    border-bottom: none;
  }

  .post-list a {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding: var(--space-6) 0;
    color: var(--color-navy);
    gap: var(--space-4);
  }

  .post-list a::after {
    display: none;
  }

  .post-list a:hover .post-title {
    color: var(--color-teal-dark);
  }

  .post-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .post-title {
    font-family: var(--font-heading);
    font-size: var(--text-xl);
    transition: color 0.2s ease;
  }

  .post-description {
    font-size: var(--text-base);
    color: var(--color-text-muted);
    line-height: 1.4;
  }

  .post-date {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    flex-shrink: 0;
    white-space: nowrap;
  }
</style>
