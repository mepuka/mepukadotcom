---
const currentYear = new Date().getFullYear();
---

<footer>
  <div class="container">
    <p>&copy; {currentYear}</p>
  </div>
</footer>

<style>
  footer {
    border-top: 1px solid var(--color-border);
    padding: var(--space-8) 0;
  }

  p {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin: 0;
  }
</style>
